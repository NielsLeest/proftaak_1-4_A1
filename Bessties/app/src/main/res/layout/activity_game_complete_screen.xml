<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/gameComplete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="256dp"
        android:background="@drawable/add_outline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gamecomplete_Title_Textfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gameComplete_title"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/gamecomplete_Text_Textfield"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/gameComplete_text"
                android:textColor="@color/black"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/toShopButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="52dp"
        android:onClick="openGameScreen"
        android:text="@string/toShop_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/newGameButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:onClick="openGameScreen"
        android:text="@string/newGameButton_text"
        app:layout_constraintBottom_toTopOf="@+id/toShopButton"
        app:layout_constraintEnd_toEndOf="@+id/gameComplete"
        app:layout_constraintStart_toStartOf="@+id/gameComplete"
        app:layout_constraintTop_toBottomOf="@+id/gameComplete" />

</androidx.constraintlayout.widget.ConstraintLayout>