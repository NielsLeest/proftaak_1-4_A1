<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEF9C7"
    tools:context=".ToGame_Activity">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="341dp"
        android:layout_height="416dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.254">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_marginTop="72dp"
            android:text="@string/to_location"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="38sp"
            android:translationX="40dp"
            android:translationY="-40dp" />

        <ImageView
            android:id="@+id/locationImage"
            android:layout_width="309dp"
            android:layout_height="294dp"
            android:adjustViewBounds="false"
            android:translationX="15sp"
            android:translationY="100sp"
            app:srcCompat="@drawable/appicon" />
    </FrameLayout>

    <Button
        android:id="@+id/hintButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:text="@string/hint"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2" />

    <Button
        android:id="@+id/foundButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="@string/found"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hintButton" />

    <Button
        android:id="@+id/foundButton2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/go_back"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/foundButton"
        app:layout_constraintStart_toStartOf="@+id/foundButton"
        app:layout_constraintTop_toBottomOf="@+id/foundButton"
        app:layout_constraintVertical_bias="0.153" />

</androidx.constraintlayout.widget.ConstraintLayout>