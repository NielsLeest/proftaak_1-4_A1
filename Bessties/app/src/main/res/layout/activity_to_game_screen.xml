<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToGame_Activity">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="341dp"
        android:layout_height="416dp"
        android:background="@drawable/add_outline"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25">

        <TextView
            android:id="@+id/ToGame_Title"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:layout_margin="3dp"
            android:layout_marginTop="0dp"
            android:text="@string/to_location"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="34sp"
            android:translationX="0dp"
            android:translationY="0dp" />

        <ImageView
            android:id="@+id/locationImage"
            android:layout_width="309dp"
            android:layout_height="294dp"
            android:adjustViewBounds="false"
            android:translationX="15sp"
            android:translationY="100sp"
            app:srcCompat="@drawable/blurlocation" />
    </FrameLayout>

    <Button
        android:id="@+id/hintButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:onClick="showHint"
        android:text="@string/hint_button"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/foundButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/foundButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        android:onClick="openGameScreen"
        android:text="@string/found"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>